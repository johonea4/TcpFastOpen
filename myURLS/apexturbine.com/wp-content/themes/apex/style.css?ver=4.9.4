/**
 * Header
 * -----------------------------------------------------------------------------*/
#site-navigation .container { position: relative; }
.nav-buttons {
	position: absolute;
	right: 12px;
	bottom: 65px;	
}
.nav-buttons a {
	color: #fff;
	background: #333;
	padding: 6px 8px;
	border-radius: 10px;
	margin-right: 8px;
}
.nav-buttons a:hover { color: #fff; text-decoration: none; }
.nav-buttons form { float:right; position:relative; top: -3px; }
.nav-buttons form input { border-radius: 12px; border: 0; background: #ccc url('img/search.png') 9px 3px no-repeat; color: #000; padding: 3px 10px; padding-left: 35px;}

@media (max-width: 767px) {
	.navbar-brand { height: 200px !important; }
	.nav-buttons { top: 160px; }
	.nav-buttons a { font-size: 12px; }
}
@media (min-width: 768px) and (max-width: 991px) {
  .navbar-brand { height: 50px !important; }
}
@media (min-width: 992px) {
	.navbar-brand { height: 100px !important; }	
}


/**
 * Footer
 * -----------------------------------------------------------------------------*/
.footer {
	background: rgba(0, 0, 0, 0.5);
	color: #fff;
	overflow: hidden;
	padding: 8px 0 5px 0;
}
.footer li > a, .footer li { color: #fff; font-size: 11px; }
.footer ul { padding:0; margin:0;}
.footer .sub-menu a, .footer .sub-menu li { color: #ccc; font-size: 9px; }
.footer-social { border-right: 1px solid #333; }
.footer-social img.full-img { width: 100%; }
.footer-social .row div:first-of-type { padding-bottom: 8px; }
.footer-quote { margin-top: 12px !important; }
#menu-footer-menu a[text='hidden'] { display: none;}

/**
 * Navigation
 * -----------------------------------------------------------------------------*/
.dropdown-menu { padding:0 !important; }
ul.nav li.dropdown:hover > ul.dropdown-menu { display: block; }
ul.nav li.dropdown:hover > a { background: #333333 !important; }
.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus { color: #fff !important; }
.side-menu > ul > li { background: #202020; }
.side-menu > ul > li:first-of-type { border-top-left-radius: 20px; border-top-right-radius: 20px; }
.side-menu > ul > li > a { display:block; padding: 8px 20px; margin: 8px 0; }
.side-menu .sub-menu { margin-left:0 !important; }
.side-menu .sub-menu li { background: #333; padding-left:40px; }
.side-menu a, .side-menu a:hover, .side-menu a:focus { color: #fff; font-weight: bold; font-size: 14px; }
.side-menu .sub-menu li a { font-weight: normal !important; font-size: 12px !important; }


/**
 * Homepage
 * -----------------------------------------------------------------------------*/
#carousel-home { margin: 15px 0 20px 0; }
#carousel-home img { width: 100%; }
#carousel-home .carousel-inner { border: 1px solid #ccc; }
.home-boxes a { /*border: 1px solid #ccc; */display: block; text-align: center; }
.home-boxes div { margin: 30px 0 50px 0; }
.home-boxes img { width: auto; height: 300px; }

/**
 * Product Page
 * -----------------------------------------------------------------------------*/
.download-button { margin: 30px; }
.gallery { margin: 10 auto 50px auto !important;}
.product { margin-bottom: 25px; }
.product img { width: 100%; }

.hardware-suppliers { margin-bottom: 25px; border: 2px solid #000; overflow: hidden; }
.hardware-suppliers div {
	border: 2px solid #000;
	height: 125px;
}
.hardware-suppliers div img { max-height: 80px; margin: 0 auto; }

